<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14f1c1">

    <TextView
        android:id="@+id/txtcasename"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Case name"
        android:textColor="#dc0c28"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#e7c905"
        />
    <TextView
        android:id="@+id/txtclientid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Client id"

        android:textColor="#1221c6"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#e7c905"
        />
    <TextView
        android:id="@+id/txtjudgement"
        android:layout_width="100dp"

        android:layout_height="100dp"
        android:text="judgement"
        android:textColor="#dc0c28"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#e7c905"

        />
    <TextView

        android:id="@+id/txtdecision"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Decision"
        android:textColor="#dc0c28"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#e7c905"


        />



</LinearLayout>