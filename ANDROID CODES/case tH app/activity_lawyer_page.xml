<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#764141"

    android:orientation="horizontal"


    tools:context="com.example.pranaw.casetrackinghandlingapp.LawyerPage">


    <Spinner
        android:id="@+id/spinnerClerk"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:layout_height="50dp"
       android:textAlignment="center"

        android:background="#b1aacc"
        android:prompt="@string/clerk"
        android:entries="@array/edit"
        />
    <Spinner
        android:id="@+id/spinnerClient"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:layout_height="50dp"
        android:textAlignment="center"

        android:background="#b1aacc"
        android:prompt="@string/client"
        android:entries="@array/edit1"
        />
    <Spinner
        android:id="@+id/spinnerCase"
        android:layout_width="0dp"
        android:layout_weight="1"


        android:layout_height="50dp"
        android:textAlignment="center"

        android:background="#b1aacc"
        android:prompt="@string/case5"
        android:entries="@array/edit5"
        />



</LinearLayout>
