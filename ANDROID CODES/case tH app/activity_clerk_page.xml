<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#764141"
    tools:context="com.example.pranaw.casetrackinghandlingapp.ClerkPage">
    <Spinner
        android:id="@+id/spinnerClient"
        android:layout_width="200dp"

        android:layout_height="50dp"
        android:textAlignment="center"

        android:background="#b1aacc"
        android:prompt="@string/client2"
        android:entries="@array/edit2"
        />
    <Spinner
        android:id="@+id/spinnerCase"
        android:layout_width="200dp"

        android:layout_height="50dp"
        android:textAlignment="center"

        android:background="#b1aacc"
        android:prompt="@string/case1"
        android:entries="@array/view"
        />
</LinearLayout>
