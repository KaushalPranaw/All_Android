<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pranaw.casetrackinghandlingapp.FetchClerk"

    android:orientation="vertical"

    android:background="#14f1c1"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:hint="Enter Clerk id">
        <EditText
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:id="@+id/txtclerkid"
            android:textSize="30sp"

            android:textColor="#d70e30"
            android:background="#fddd0c"/>


    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fetch"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5dp"
        android:background="#ce52c5"
        android:textColor="#910101"
        android:textSize="25sp"
        android:onClick="fetchClerk"/>



</LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"


        android:layout_marginTop="50dp"


        >
        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtclerkname"
            android:textSize="30sp"
            android:textColor="#d70e30"
            android:background="#fddd0c"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"



        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtclerkaddress"
            android:textSize="30sp"
            android:textColor="#d70e30"
            android:background="#fddd0c"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"



        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtclerkgender"
            android:textSize="30sp"
            android:textColor="#d70e30"
            android:background="#fddd0c"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"



        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtclerkpass"
            android:textSize="30sp"
            android:textColor="#d70e30"
            android:background="#fddd0c"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"



        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtclerkphone"
            android:textSize="30sp"
            android:textColor="#d70e30"
            android:background="#fddd0c"
            />
    </android.support.design.widget.TextInputLayout>


    <ImageView

        android:layout_gravity="center"
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#041729"

        />


</LinearLayout>
